#!/bin/sh

TERM="foot -e"
VIDEO="mpv"
IMAGE="mpv"
MUSIC="mpv"

case "${1##*.}" in
    docx | doc | pdf)
        $BROWSER "$1"
        ;;
    png | jpe | jpg | jpeg | jfif | avif | webp | gifv | gif)
        $IMAGE "$1"
        ;;
    webm | wmv | mkv | mp4)
        $VIDEO "$1"
        ;;
    opus | mp3 | flac)
        $TERM $MUSIC "$1"
        ;;
    *)
        $TERM vim "$1"
        ;;
esac
