output eDP-1 {
   mode 1920x1200
   scale 1.0
   pos 0,0
   bg #ededed solid_color
}

input type:keyboard {
   repeat_delay 200
   repeat_rate 50
}

input type:pointer {
   accel_profile "flat"
   pointer_accel "0"
}

input type:touchpad {
   accel_profile "flat"
   pointer_accel "0.8"
   dwt enabled
   tap enabled
   natural_scroll enabled
   middle_emulation disabled
}

set $mod Mod1
floating_modifier $mod normal

bindsym $mod+e exec 00
bindsym $mod+z exec foot -e bash --rcfile $ENV
bindsym $mod+n exec MOZ_ENABLE_WAYLND=1 firefox
bindsym $mod+s exec grim -g "$(slurp)"      $HOME/$(date +%F-%H-%M-%S).jpg
bindsym $mod+y exec grim -g "0,0 1920x1200" $HOME/$(date +%F-%H-%M-%S).jpg
bindsym $mod+c kill
bindsym $mod+a fullscreen
bindsym $mod+shift+r reload
bindsym $mod+shift+q exit
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+shift+1 move container to workspace number 1
bindsym $mod+shift+2 move container to workspace number 2
bindsym $mod+shift+3 move container to workspace number 3
bindsym $mod+shift+4 move container to workspace number 4
bindsym $mod+shift+5 move container to workspace number 5
bindsym $mod+shift+6 move container to workspace number 6

mode "resize" {
    bindsym Up    resize shrink height 90px
    bindsym Down  resize grow   height 90px
    bindsym Left  resize shrink width  90px
    bindsym Right resize grow   width  90px

    bindsym c mode "default"
    bindsym $mod+d nop
    }
    bindsym $mod+r mode "resize"

mode "drag" {
    bindsym c exec swaymsg seat seat0 cursor release button1, mode "default"
    bindsym $mod+r nop
    }
    bindsym $mod+d exec "swaymsg mode drag; swaymsg seat seat0 cursor press button1"

default_border none
for_window [app_id=".*"] floating enable, titlebar hide

set $ac #ffffff
set $fg #ffffff

# ? border, background, foreground, indicator, child
client.focused          $ac $ac $ac $ac $ac
client.focused_inactive $ac $ac $ac $ac $ac
client.unfocused        $ac $ac $ac $ac $ac
client.urgent           $fg $fg $fg $fg $fg

seat seat0 xcursor_theme \
  "macOS-Monterey" 24

exec_always gsettings set org.gnome.desktop.interface cursor-theme \
  "macOS-Monterey" 24

exec "$HOME/Projects/bar/bar"
xwayland disable

# /etc/sudoers.d/wheel must be modified to not require a password for zzz.
exec swayidle -w \
    timeout 3600 'sudo zzz' \
    timeout 1200 'swaymsg "output * dpms off"' \
    resume       'swaymsg "output * dpms on"'
